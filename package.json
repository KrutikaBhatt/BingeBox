{
  "name": "ott_platform",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.7.1",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "firebase": "^8.2.7",
    "fuse": "^0.4.0",
    "fuse.js": "^6.4.6",
    "normalize-css": "^2.3.1",
    "normalize.css": "^8.0.1",
    "react": "^17.0.1",
    "react-bootstrap": "^1.5.0",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.0",
    "styled-components": "^5.2.1",
    "web-vitals": "^1.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --watchAll",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js",
      "!<rootDir>/src/App.js",
      "!<rootDir>/src/Routes_System/routes.js",
      "!<rootDir>/src/context/firebase.js",
      "!<rootDir>/src/Configurations/firebase.prod.js",
      "!<rootDir>/src/index.js",
      "!<rootDir>/src/database.js",
      "!<rootDir>/src/selection_map/selection-map.js",
      "!<rootDir>/src/Pages/index.js",
      "!<rootDir>/src/globalStyles.js",
      "!<rootDir>/src/components/index.js",
      "!<rootDir>/src/firebase.prod.js",
      "!<rootDir>/src/custom-hooks/*.js",
      "!<rootDir>/src/context/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "gh-pages": "^3.1.0",
    "prettier": "^2.2.1"
  }
}
